<div class="max-w-5xl mx-auto px-6 py-8">
  <h1 class="text-gray-700 text-3xl font-bold mb-6">
    Property Detail
  </h1>

  <div class="bg-white rounded-xl shadow p-4 border border-gray-200 space-y-2">
    <p class="text-xs text-gray-500 mb-1">
      <strong>Property ID:</strong> <%= @property.property_id %>
    </p>
    <p>
      <strong>Name:</strong> <%= @property.name %>
    </p>
    <p>
      <strong>Email:</strong> <%= @property.email %>
    </p>
  </div>

  <div class="flex gap-4 mb-6 mt-8">
    <button id="show-interior" class="bg-red-100 text-red-700 px-4 py-2 rounded-xl shadow-sm">Interior</button>
    <button id="show-exterior" class="bg-red-100 text-red-700 px-4 py-2 rounded-xl shadow-sm">Exterior</button>
  </div>

  <div id="image-gallery" class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    <% @interior_images.each do |img| %>
      <img src="<%= img %>" class="gallery-img w-full rounded-lg shadow-md object-cover aspect-video transition-transform hover:scale-105 border border-gray-200" data-type="interior" />
    <% end %>

    <% @exterior_images.each do |img| %>
      <img src="<%= img %>" class="gallery-img w-full rounded-lg shadow-md object-cover aspect-video transition-transform hover:scale-105 border border-gray-200 hidden" data-type="exterior" />
    <% end %>
  </div>
  

