<div class="max-w-5xl mx-auto px-6 py-8">
  <h1 class="text-gray-700 text-3xl font-bold mb-6">
    Properties in Madison
  </h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6" id="properties">
    <% @properties.each do |property| %>
      <div class="bg-white rounded-xl shadow p-4 border border-gray-200">
        <p class="text-xs text-gray-500 mb-1">
          <strong>Property ID:</strong> <%= property.property_id %>
        </p>
        <h2 class="text-xl font-semibold mb-2">
          <%= link_to property.name, property_path(property), class: "text-red-700 hover:underline" %>
        </h2>
        <p class="text-gray-600 text-sm mb-1">
          <strong>Email:</strong> <%= property.email %>
        </p>
      </div>
    <% end %>
  </div>

  <%= link_to "+ Add a New Property", new_property_path, class: "text-red-700 hover:text-red-800 hover:underline inline-block mt-6" %>
</div>
